    "import sounddevice as sd\n",
    "import numpy as np\n",
    "\n",
    "duration = 3  # 3秒録音\n",
    "print(\"録音中...\")\n",
    "recording = sd.rec(int(duration * 16000), samplerate=16000, channels=1, dtype='int16', device=3)\n",
    "sd.wait()\n",
    "print(\"録音完了。音声データサイズ：\", recording.shape)\n",
    "print(\"最大値：\", np.max(recording))"
   ]
